<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment>Configuration for Knetminer</comment>	
  
  <entry key="DataSourceName">${knetminer.dataSourceId}</entry>

  <entry key="StateMachineFilePath">file:///${knetminer.configDir}/SemanticMotifs.txt</entry>
  
  <entry key="DataPath">${knetminer.dataDir}</entry>
  <entry key="DataFile">${knetminer.oxlFile}</entry>
  
	<entry key="SpeciesTaxId">${knetminer.specieTaxId}</entry>
	<entry key="reference_genome">true</entry>
	<entry key="export_visible_network">true</entry>
	

	<!-- 
		This is the configuration for the new Neo4j-based backend
	-->
	
	<!-- The value for this comes from Maven and depends on the selected profile. -->
	<entry key = "GraphTraverserClass">${knetminer.api.graphTraverserClass}</entry>
	
	<!-- This is for the new Neo4j-based graph traverser -->
	<entry key = "knetminer.backend.configPath">${knetminer.neo4j.configFile}</entry>
	
	
	<!-- 
		Cypher queries used in components like the traverser are restricted to be executed within this time
		limit. If one query takes longer, it is aborted with empty results, but without breaking the application.
		-1 means no timeout, but it's not recommended.
	--->
	<entry key = "knetminer.backend.cypher.queryTimeoutMs">3000</entry>
	
	<!-- 
		When enabled, the Cypher graph traverser reports some statistics about its interaction with Neo4j.
		Probably you're not interested in this if you aren't a Knetminer developer.
	-->
	<entry key = "knetminer.backend.traverserPerformanceTracking.enabled">true</entry>
	
	<!-- 
	  The performance tracker tells some stats from time to time. See CFGOPT_PERFORMANCE_REPORT_FREQ in the 
	  code for details. Again, this isn't something you're very interested in if you're not developing Knetminer. 
	-->
	<entry key = "knetminer.backend.traverserPerformanceTracking.reportFrequency">500000</entry>
</properties>
