<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                          https://maven.apache.org/xsd/settings-1.0.0.xsd">
	<profiles>
		<profile>
			<id>docker</id>
			<activation><activeByDefault>true</activeByDefault></activation>
			<properties>
				<!-- 
					This could be specified via some parameter, to link the local dir where all the configs are
					DO NOT add profiles just for the purpose of changing this. 
				-->
				<knetminer.deploymentDir>/tmp</knetminer.rootConfigDir>
				<knetminer.configDir>${knetminer.deploymentDir}/knetminer-config</knetminer.configDir>
				<knetminer.dataDir>${knetminer.deploymentDir}/knetminer-data</knetminer.dataDir>
			</properties>	
		</profile>
	</profiles>
                            
</settings>